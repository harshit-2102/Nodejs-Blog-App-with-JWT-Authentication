<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="./css/bootstrap.min.css">
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary mb-5">
    <div class="container">
      <a class="navbar-brand fw-semibold fs-3 fw-900" href="/">Blogs</a>
      <div>
        <% if(user) { %>
          <h3 class="text-dark fw-semibold">Welcome, <%= user.email %>
          </h3>
          <div class="d-flex justify-content-end">
            <a class="btn btn-outline-success me-2" href="/add-record">Add new Record</a>
            <a class="btn btn-outline-success" href="/logout">Logout</a>
          </div>
          <% } else { %>
            <h3 class="text-dark fw-semibold">Login to add blogs</h3>
            <div class="d-flex justify-content-end">
              <a class="btn btn-outline-success me-2" href="/login">Login</a>
              <a class="btn btn-outline-success" href="/signup">Signup</a>
            </div>
            <% } %>
      </div>
    </div>
  </nav>